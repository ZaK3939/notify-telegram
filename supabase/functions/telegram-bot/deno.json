{
  "tasks": {
    "serve": "deno run --allow-net --allow-env --watch index.ts"
  },
  "imports": {
    "std/": "https://deno.land/std@0.204.0/",
    "supabase": "https://esm.sh/@supabase/supabase-js@2.39.0",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.39.0"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "files": {
      "include": ["*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}
